# Habilitar el m칩dulo de reescritura
RewriteEngine On

# Asegurarse de que la solicitud no sea para un archivo real o un directorio
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Reescribir la URL sin extensi칩n a la versi칩n con .php
RewriteRule ^src/views/(.*)$ src/views/$1.php [L]


# Redirige todas las solicitudes a index.php pasando la URI como par치metro
RewriteRule ^(.*)$ index.php?uri=$1 [QSA,L]